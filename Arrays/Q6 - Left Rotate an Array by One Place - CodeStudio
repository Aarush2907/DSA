Code:
#include <bits/stdc++.h> 
vector<int> rotateArray(vector<int>& arr, int n) {
    // Write your code here.
    int temp = arr[0];
    int i = 0;
    for( ; i < n-1 ; i++){
        arr[i] = arr[i+1];
    }
    arr[i] = temp;

    return arr;
}
